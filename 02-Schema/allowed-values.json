{
  "description": "Allowed categorical values and normalization mappings",
  "version": "1.0",
  "lastUpdated": "2026-01-10",
  
  "Stage": {
    "standardValues": [
      "Lead",
      "Qualified",
      "Proposal",
      "Negotiation",
      "Closed-Won",
      "Closed-Lost",
      "On-Hold"
    ],
    "synonyms": {
      "Lead": ["New", "Initial", "Prospecting", "Discovery"],
      "Qualified": ["Qualified Lead", "SQL", "MQL", "Validated"],
      "Proposal": ["Proposed", "Quote Sent", "Bid Submitted"],
      "Negotiation": ["Negotiating", "Contract Review", "Final Discussion"],
      "Closed-Won": ["Won", "Closed Won", "Success", "Activated"],
      "Closed-Lost": ["Lost", "Closed Lost", "Rejected", "Dead"],
      "On-Hold": ["Paused", "Deferred", "Postponed", "Waiting"]
    }
  },
  
  "Status": {
    "standardValues": [
      "Active",
      "Paused",
      "Stalled",
      "At-Risk",
      "Healthy"
    ],
    "synonyms": {
      "Active": ["In Progress", "Ongoing", "Live"],
      "Paused": ["On Hold", "Temporary Stop"],
      "Stalled": ["Stuck", "Blocked", "No Movement"],
      "At-Risk": ["Risk", "Danger", "Warning", "Jeopardy"],
      "Healthy": ["Good", "On Track", "Green", "Normal"]
    }
  },
  
  "Region": {
    "standardValues": [
      "North America",
      "EMEA",
      "APAC",
      "Latin America"
    ],
    "synonyms": {
      "North America": ["NA", "USA", "US", "Canada", "Americas"],
      "EMEA": ["Europe", "Middle East", "Africa", "EU"],
      "APAC": ["Asia Pacific", "Asia", "Australia", "ANZ"],
      "Latin America": ["LATAM", "South America", "Central America"]
    }
  },
  
  "Priority": {
    "standardValues": [
      "High",
      "Medium",
      "Low"
    ],
    "synonyms": {
      "High": ["Critical", "Hot", "P1", "Urgent"],
      "Medium": ["Normal", "P2", "Standard"],
      "Low": ["P3", "Cold", "Minor"]
    }
  },
  
  "YesNo": {
    "standardValues": [
      "Yes",
      "No"
    ],
    "synonyms": {
      "Yes": ["Y", "True", "1", "Affirmative", "Confirmed"],
      "No": ["N", "False", "0", "Negative", "Denied"]
    }
  },
  
  "normalizationRules": {
    "caseSensitive": false,
    "trimWhitespace": true,
    "removeSpecialChars": false,
    "logUnknownValues": true,
    "onUnknownValue": "flag"
  }
}
