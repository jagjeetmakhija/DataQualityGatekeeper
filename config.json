{
  "project": {
    "name": "LocalAI-Agent-Phase1",
    "description": "Fully local, deterministic data intake, autofix and validation pipeline",
    "version": "1.0.0"
  },

  "paths": {
    "base_path": "C:/MyCode/cx-ai-local/LocalAIAgent-Phase1",
    "input_path": "C:/MyCode/cx-ai-local/LocalAIAgent-Phase1/02-Inputs",
    "data_files_path": "C:/MyCode/cx-ai-local/LocalAIAgent-Phase1/02-Inputs",
    "config_path": "C:/MyCode/cx-ai-local/LocalAIAgent-Phase1/config.json",
    "output_root": "C:/MyCode/cx-ai-local/LocalAIAgent-Phase1/05-Outputs",
    "schema_path": "C:/MyCode/cx-ai-local/LocalAIAgent-Phase1/02-Schema",
    "modules_path": "C:/MyCode/cx-ai-local/LocalAIAgent-Phase1/03-Modules",
    "scripts_path": "C:/MyCode/cx-ai-local/LocalAIAgent-Phase1/01-Scripts",
    "docs_path": "C:/MyCode/cx-ai-local/LocalAIAgent-Phase1/01-Docs"
  },

  "step1_autofix": {
    "enabled": true,
    "python_script": "auto_fixer.py",
    "input_extension": [".csv", ".xlsx"],
    "output_suffix": "_cleaned",
    "log_file": "step1_autofix.log",
    "encoding": "utf-8",
    "delimiter": ",",
    "null_values": ["", "NULL", "null", "N/A", "na"],
    "trim_whitespace": true,
    "normalize_headers": true,
    "remove_duplicates": true,
    "date_format": "auto",
    "number_format": "auto"
  },

  "step2_validate": {
    "enabled": true,
    "log_file": "step2_validate.log",
    "fail_on_error": true,
    "rules": {
      "check_empty_file": true,
      "check_column_names": true,
      "check_required_columns": false,
      "check_null_percentage": true,
      "max_null_percentage": 10,
      "check_duplicate_rows": true,
      "check_data_types": false
    }
  },

  "logging": {
    "level": "INFO",
    "timestamp_format": "%Y-%m-%d %H:%M:%S",
    "write_console": true,
    "write_file": true
  },

  "runtime": {
    "python_executable": "python",
    "stop_on_failure": true,
    "create_timestamped_output_dir": true
  }
}
